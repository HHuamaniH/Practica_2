@model SIGOFCv3.Areas.THabilitante.Models.ManGrillaViewModel
<script src="~/Areas/THabilitante/js/Controles/Thabilitante.js"></script>
<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <h5 class="modal-title">Seleccion Titulo Habilitante</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar" onclick="vpTHabilitante.closeModal();">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmHabilitante" action="@Url.Action("AddEdit","ManCertificadoPlanta",new { Area="THabilitante"})" method="post">
                @Html.HiddenFor(m => m.busFormulario)
                @Html.Hidden("idModal", (string)ViewBag.idModal)
                @Html.HiddenFor(m => m.hdfTipoFormulario)
                @Html.HiddenFor(m => m.Nuevo)

                <div class="form-row">
                    <div class="col-md-4 mb-3">
                        @Html.DropDownList("ddlManNueCondicion", (IEnumerable<SelectListItem>)Model.cboOpciones, new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="col-md-6 mb-3">
                        <input type="text" id="txtValor" class="form-control form-control-sm" maxlength="50" />
                    </div>
                    <div class="col-md-2 mb-3">
                        <a id="btnFuncionarioBuscar" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Buscar el registro"><span class="fa mx-2 fa-lg fa-search"></span></a>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12 text-center">
                        <div class="table-responsive" style="height: 280px;">
                            <table id="tbHabilitante" class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>N°</th>
                                        <th>Título Habilitante</th>
                                        <th>Modalidad</th>                                        
                                        <th>Titular</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <button type="submit" style="display:none;"></button>
            </form>
        </div>
        <div class="modal-footer">

        </div>
    </div>
</div>
