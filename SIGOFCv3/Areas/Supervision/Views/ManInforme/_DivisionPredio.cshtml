@model CapaEntidad.DOC.Ent_INFORME_DIVISION_PREDIO
<script src="~/Areas/Supervision/js/ManInforme/_DivisionPredio.js?v=@Guid.NewGuid()"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>División del Predio</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemDivisionPredio">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtDivisionInternaDP" class="text-small">División Interna</label>
                        <textarea id="txtDivisionInternaDP" class="form-control form-control-sm" maxlength="200" rows = "2" onkeypress="return utilSigo.checkLetter(event)">@Model.DIVISION_INTERNA</textarea>                        
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtACoordEsteDP" class="text-small">Coordenadas Este</label>                        
                        <textarea id="txtACoordEsteDP" class="form-control form-control-sm" maxlength="400" rows = "4" disabled = "disabled">@Model.COORDENADA_ESTE</textarea>                        
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtACoordNorteDP" class="text-small">Coordenadas Norte</label>
                        <textarea id="txtACoordNorteDP" class="form-control form-control-sm" maxlength="400" rows="4" disabled="disabled">@Model.COORDENADA_NORTE</textarea>                        
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtAAltidudDP" class="text-small">Altitudes</label>
                        <textarea id="txtAAltidudDP" class="form-control form-control-sm" maxlength="400" rows="4" disabled="disabled">@Model.ALTITUD</textarea>                        
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtCoordEsteDP" class="text-small">Coordenada Este</label>
                        <input id="txtCoordEsteDP" class="form-control form-control-sm" maxlength="6" onkeypress = "return utilSigo.checkNum(event)"/>                        
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtCoordNorteDP" class="text-small">Coordenada Norte</label>
                        <input id="txtCoordNorteDP" class="form-control form-control-sm" maxlength="7" onkeypress="return utilSigo.checkNum(event)" />                        
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtAltidudDP" class="text-small">Altitud</label>
                        <input id="txtAltidudDP" class="form-control form-control-sm" maxlength="4" onkeypress="return utilSigo.checkNum(event)" />                        
                    </div>
                </div>
                <div class="form-row mt-2" style="display:felx;justify-content:center;align-items: center;">
                    <div class="form-inline text-right">
                        <button type="button" id="btnAgregarLinea" onclick="_DivisionPredio.fnAgregarLinea()" class="btn btn-primary btn-sm">Agregar</button>
                        <button type="button" id="btnLimpiar" onclick="_DivisionPredio.fnClearLinea()" class="btn btn-danger btn-sm">Eliminar</button>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observación</label>
                        <textarea id="txtObservacionDP" class="form-control form-control-sm" maxlength="400" rows="3" onkeypress="return utilSigo.checkLetter(event)">@Model.OBSERVACION</textarea>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_DivisionPredio.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
