@model CapaEntidad.DOC.Ent_INFORME_DIVISION_PREDIO
<script src="~/Areas/Supervision/js/ManInforme/_DivisionPredio.js?v=@Guid.NewGuid()"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>División del Predio</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemDivisionPredio">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodSecuencial")
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtDivisionInternaDP" class="text-small">*División Interna</label>
                        @Html.TextBox("txtDivisionInternaDP", "", new { @class = "form-control form-control-sm", maxlength = "200", onkeypress = "return utilSigo.checkLetter(event)" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtCoordEsteDP" class="text-small">*Coordenada Este</label>
                        @Html.TextBox("txtCoordEsteDP", "", new { @class = "form-control form-control-sm", maxlength = "6", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtCoordNorteDP" class="text-small">*Coordenada Norte</label>
                        @Html.TextBox("txtCoordNorteDP", "", new { @class = "form-control form-control-sm", maxlength = "7", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>
                    <div class="form-group col-md-4">
                        <label for="txtAltidudDP" class="text-small">*Altitud</label>
                        @Html.TextBox("txtAltidudDP", "", new { @class = "form-control form-control-sm", maxlength = "4", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observación</label>
                        @Html.TextArea("txtObservacionDP", "", new { @class = "form-control form-control-sm", maxlength = "400", rows = "3", onkeypress = "return utilSigo.checkLetter(event)" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_DivisionPredio.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
