
<script src="~/Areas/Supervision/js/ManInformeExSitu/_ActividadCapacitacion.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>Capacitación Realizada</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemActCapacitacion">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodCapacitacion")
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtTema" class="text-small">Tema</label>
                        @Html.TextArea("txtTema", "", new { @class = "form-control form-control-sm", rows = "3" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtNumBeneficiado" class="text-small">N° Personal Beneficiado</label>
                        @Html.TextBox("txtNumBeneficiado", "", new { @class = "form-control form-control-sm", type = "number" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtCapacitador" class="text-small">Entidad/Profesional Capacitador</label>
                        @Html.TextArea("txtCapacitador", "", new { @class = "form-control form-control-sm", rows = "2" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_ActividadCapacitacion.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>