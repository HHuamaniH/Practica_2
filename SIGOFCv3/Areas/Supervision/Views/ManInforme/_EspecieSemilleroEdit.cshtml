                @Html.Hidden("hdfCodSecuencial")
                @Html.Hidden("hdfCodTHabilitante")
                @Html.Hidden("hdfNumPoa")
                @Html.Hidden("hdfNombrePoa")
                @Html.Hidden("hdfCodEspecie")

