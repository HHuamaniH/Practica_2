<div class="modal-dialog" role="document">
    <div class="modal-content" id="contenedorTaraOpcion">
        <div class="modal-header text-small" style="cursor:move;padding:0.5rem;">
            <h5 class="modal-title" id="h5Titulo">Nuevo</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmTaraOpcion">
                <input type="hidden" id="COD_SECUENCIAL" name="COD_SECUENCIAL" value="0" />
                <input type="hidden" id="RegEstado" name="RegEstado" value="1" />
                <input type="hidden" id="RegEstadoClient" name="RegEstadoClient" value="1" />
                <div class="form-group row">
                    <label for="DESCRIPCION" class="col-md-4 col-form-label text-small">Opciones</label>
                    <div class="col-md-8">                        
                        @Html.DropDownList("COD_PMTOPCIONES", new SelectList(ViewBag.cboOpciones, "Value", "Text"), new { @class = "form-control form-control-sm", @style = "width:auto;" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="OBSERVACION" class="col-md-4 col-form-label text-small">Observación</label>
                    <div class="col-md-8">
                        <textarea id="OBSERVACION" name="OBSERVACION" class="form-control form-control-sm" rows="2" maxlength="300" />
                    </div>
                </div>               
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnGuardar" class="btn btn-primary btn-sm">Agregar</button>
        </div>
    </div>
</div>
<script src="~/Areas/THabilitante/js/ManPlanManejo/_ItemTaraOpcion.js"></script>