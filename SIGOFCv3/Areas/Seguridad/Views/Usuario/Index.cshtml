
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script src="~/Areas/Seguridad/js/Usuario/Index.js?v=@Guid.NewGuid()"></script>
@section scripts{
    <script>
        "use strict"; var rol = '';
    $(document).ready(function () {
        //Validamos el rol del usuario
        utilSigo.ValidaRol('@ViewBag.VAliasRol', 'btnAdd', 'Edit');
    });
    </script>
}
<div id="divManUsuario">
    <form id="frmManUsuario">
        @Html.Hidden("tipoFormulario", (object)ViewBag.Formulario)
        @Html.Hidden("titleMenu", (object)ViewBag.TituloFormulario)
        <div id="dvManUsuarioContenedor" class="container-fluid"></div>
    </form>
</div>

@* Para los modals relacionados este control Global*@
<div class="modal fade hide" id="mdlManUsuario_Global" role="dialog" tabindex="-1"></div>
<div id="divManUsuarioMenu" class="container-fluid"></div>
@* Para el control genérico de personas *@
<div class="modal fade hide" id="mdlBuscarPersona" role="dialog"></div>
<div class="modal fade hide" id="modalAddEditPersona" role="dialog"></div>
<div class="modal fade hide" id="personaUbigeoModal" role="dialog"></div>
