<div class="modal-dialog" role="document">
    <div class="modal-content" id="contenedorFlora">
        <div class="modal-header text-small" style="cursor:move;padding:0.5rem;">
            <h5 class="modal-title" id="h5Titulo">Nuevo</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmFlora">
                <input type="hidden" id="COD_SECUENCIAL" name="COD_SECUENCIAL" value="0" />
                <input type="hidden" id="RegEstado" name="RegEstado" value="1" />
                <input type="hidden" id="RegEstadoClient" name="RegEstadoClient" value="1" />
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="COD_ESPECIES" class="text-small">Especies</label>
                        @Html.DropDownList("COD_ESPECIES", new SelectList(ViewBag.cboOpciones, "Value", "Text"), new { @class = "form-control form-control-sm", @style = "width:auto;" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="CARACTERISTICAS" class="text-small">Características generales</label>
                        <textarea id="CARACTERISTICAS" name="CARACTERISTICAS" class="form-control form-control-sm" rows="2" maxlength="300" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="RASOCIACIONES_FAUNA" class="text-small">Relación entre las asociaciones y la fauna</label>
                        <textarea id="RASOCIACIONES_FAUNA" name="RASOCIACIONES_FAUNA" class="form-control form-control-sm" rows="2" maxlength="300" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="OBSERVACION" class="text-small">Observación</label>
                        <textarea id="OBSERVACION" name="OBSERVACION" class="form-control form-control-sm" rows="2" maxlength="300" />
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnGuardar" class="btn btn-primary btn-sm">Aceptar</button>
        </div>
    </div>
</div>
<script src="~/Areas/THabilitante/js/ManPlanManejo/_InventarioFlora.js"></script>