
<script src="~/Areas/Capacitacion/js/ManCapacitacion/_NotaExamen.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span id="lblItemNotaExamen_Titulo">Notas Examen Inicial y Final</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemNotaExamen">
                <div class="form-group row" style="margin-bottom:0px;">
                    <label for="lblItemNotaExamen_Participantelbl" class="col-md-4 col-form-label text-small">Participante<i class="fa fa-cog fa-spin text-danger" id="iconPersona" style="display:none;" data-toggle="tooltip" data-placement="top" title="Seleccione el participante"></i></label>
                    <div class="col-md-8">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-search" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Seleccionar Participante" onclick="_NotaExamen.fnBuscarPersona();"></i></span>
                            </div>
                            @Html.Editor("lblItemNotaExamen_Participante", new { htmlAttributes = new { @class = "form-control form-control-sm", @disabled = "disabled" } })
                            @Html.Hidden("hdfItemNotaExamen_Participante")
                            @Html.Hidden("hdfItemNotaExamen_Documento")
                            @Html.Hidden("hdfItemNotaExamen_Institucion")
                        </div>
                    </div>
                </div>
                <div class="form-group row" style="margin-bottom:0px;">
                    <label for="lblItemNotaExamen_NInicio" class="col-md-4 col-form-label text-small">Nota Examen Inicio</label>
                    <div class="col-md-4">
                        @Html.TextBox("txtItemNotaExamen_NInicio", "", new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-group row" style="margin-bottom:0px;">
                    <label for="lblItemNotaExamen_NFin" class="col-md-4 col-form-label text-small">Nota Examen Fin</label>
                    <div class="col-md-4">
                        @Html.TextBox("txtItemNotaExamen_NFin", "", new { @class = "form-control form-control-sm" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnGuardarNotaExamen" class="btn btn-primary btn-sm" onclick="_NotaExamen.fnSubmitForm()">Guardar</button>
            <button type="button" id="btnCancelarNotaExamen" class="btn btn-secondary btn-sm" onclick="_NotaExamen.fnCloseModal()">Cancelar</button>
        </div>
    </div>
</div>