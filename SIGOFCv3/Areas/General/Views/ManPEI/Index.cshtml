
@{
    ViewBag.Title = ViewBag.TituloFormulario;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Areas/General/js/ManPEI/Index.js"></script>

<div class="container-fluid">
    <div class="card">
        <div class="card-header text-left">
            <h5>@ViewBag.TituloFormulario</h5>
        </div>
        <div class="card-body">
            <form id="frmManPEI" method="get">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        @Html.DropDownList("ddlOptBuscarId", (IEnumerable<SelectListItem>)ViewBag.ddlOptBuscar, new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control form-control-sm" id="txtValorBuscar" disabled="disabled" placeholder="Ingrese Valor a Buscar">
                    </div>
                    <div class="btn-group col-md-2" style="padding-top:5px;">
                        <a id="btnSearch" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Buscar el registro" onclick="ManPEI.fnSearch()"><span class="fa mx-2 fa-lg fa-search"></span></a>
                        <a id="btnRefresh" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Actualizar el listado" onclick="ManPEI.fnRefresh()"><span class="fa mx-2 fa-lg fa-refresh"></span></a>
                        <a id="btnCreateNew" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Crear un nuevo registro" onclick="ManPEI.fnAddEdit(null)"><span class="fa mx-2 fa-lg fa-plus"></span></a>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table id="tbListPEI" class="table table-hover table-bordered" style="width:100%;">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade hide" id="addEditModal" tabindex="-1" role="dialog"></div>
