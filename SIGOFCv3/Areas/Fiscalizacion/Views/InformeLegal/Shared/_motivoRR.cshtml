            </div>
            <div class="form-group col-md-4">
                @Html.CheckBoxFor(m => m.chkFundadoParteRR, new { @class = "form-check-input", style = "width:15px;height:16px;" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
            </div>
            <div class="form-group col-md-4">
                <label for="chkInfundadoRR" class="text-small">Infundado</label>
            </div>
            <div class="form-group col-md-4">
                @Html.CheckBoxFor(m => m.chkInfundadoRR, new
                {
                    @class = "form-check-input",
