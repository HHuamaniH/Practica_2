                    <div class="form-group col-md-2">
                        <label for="txtBloque" class="text-small">Parcela de Corta</label>
                        @Html.DropDownList("txtPCEMS", new SelectList(ViewBag.ddParcelas, "Value", "Text"), new { @class = "form-control form-control-sm" })

                    </div>
                    <div class="form-group col-md-2">
                        <label for="txtBloque" class="text-small">Bloque</label>
                        @Html.TextBox("txtBloqueB", "", new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-2">
                        <label for="txtFaja" class="text-small">Faja</label>
                        @Html.TextBox("txtFajaB", "", new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-2">
                        <label for="txtCodigo" class="text-small">Código</label>
