@model CapaEntidad.ViewModel.VM_Resodirec

<script type="text/javascript">
    var _renderRectificacion = {};
    _renderRectificacion.fnSelectRecom = function () {
        _renderRectificacion.frm.find("#divRectificacion").hide();

        if (_renderRectificacion.frm.find("#chkRectificacion").is(':checked')) {
            _renderRectificacion.frm.find("#divRectificacion").show();
        }
    }

    $(document).ready(function () {
        _renderRectificacion.frm = $("#fmrRectificacion");
        _renderRectificacion.fnSelectRecom();
    });
</script>

<div id="fmrRectificacion">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Rectificación</label>
        </div>
        <div class="form-group col-md-6">
            @Html.CheckBoxFor(m => m.chkRectificacion, new
            {
                @class = "form-check-input",
                style = "width:15px;height:16px;",
                @onchange = "_renderRectificacion.fnSelectRecom()"
            })
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>

    <div class="form-row" id="divRectificacion" style="display:none;">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-6">
            @Html.TextAreaFor(m => m.txtDesRectificacion, 4, 1, new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>
</div>
