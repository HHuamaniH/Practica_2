        </div>
        <div class="form-group col-md-6">
            @Html.CheckBoxFor(m => m.chkFinPauRR, new { @class = "form-check-input", style = "width:15px;height:16px;" })
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>

    <div class="form-row" style="background-color:#dae7f5">
