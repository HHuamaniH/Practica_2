@model CapaEntidad.ViewModel.VM_Resodirec

<div id="fmrRDAmpliacion">
    <!--Medidas Cautelares-->
    <div id="divMedCaut">
        @Html.Partial("~/Areas/Fiscalizacion/Views/ManResolucion/_Shared/_generic/_renderMedCaut.cshtml", Model)
    </div>


    <div class="card-header text-small">Motivo de Ampliación<br /></div>
    <div><br /></div>
    <div class="form-row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Ampliar imputación de una infracción</label>
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.chkmotamp_ampimp, new { @class = "form-check-input", style = "width:15px;height:16px;" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Ampliar por otras infracciones</label>
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.chkmotamp_ampotrinf, new { @class = "form-check-input", style = "width:15px;height:16px;" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Ampliación por plazos</label>
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.chkmotamp_ampporpla, new { @class = "form-check-input", style = "width:15px;height:16px;" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
            <label for="lblTerceroSolidario" class="text-small">Tercero solidario</label>
        </div>
        <div class="form-group col-md-4">
            @Html.CheckBoxFor(m => m.chkTerceroSolidario, new { @class = "form-check-input", style = "width:15px;height:16px;", @onchange = "ManRD_AddEdit.fnShowTerceroSolidario()" })
        </div>
    </div>
    <div class="form-row" id="divTerceroSolidario" style="display:none;">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-plus" style="cursor:pointer;" onclick="ManRD_AddEdit.fnBuscarPersona('TERCERO', 'N');" data-toggle="tooltip" data-placement="top" title="Agregar"></i></span>
                </div>
                @Html.EditorFor(m => m.txtTerceroSolidario, new { htmlAttributes = new { @class = "form-control form-control-sm", @disabled = "disabled" } })
                <input type="hidden" id="hdTipoTercero" />
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Otros</label>
        </div>
        <div class="form-group col-md-6">
            @Html.TextAreaFor(m => m.txtmotamp_otros, 4, 1, new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>

    <!--Infracciones-->
    <div id="divInfracciones">
        @Html.Partial("~/Areas/Fiscalizacion/Views/ManResolucion/_Shared/_generic/_renderInfracciones.cshtml", Model)
    </div>

    <!--Rectificacion-->
    <div>
        @Html.Partial("~/Areas/Fiscalizacion/Views/ManResolucion/_Shared/_generic/_renderRectificacion.cshtml", Model)
    </div>

</div>
