@model CapaEntidad.ViewModel.VM_Meta

<script src="~/Areas/General/js/ManMeta/AddEdit.js"></script>

<div id="divRegMeta" class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;padding:0.5rem;">
            <h5 class="modal-title">@Model.lblTitulo</h5>
        </div>
        <div class="modal-body">
            <form id="frmAddEditMeta" method="post">
                @Html.HiddenFor(m => m.hdfCodMeta)
                @Html.HiddenFor(m => m.hdfEstado)
                @Html.HiddenFor(m => m.RegEstado)
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label for="ddlTipoIndicadorId" class="text-small">Tipo de Indicador</label>
                        @Html.DropDownListFor(m => m.ddlTipoIndicadorId, new SelectList(Model.ddlTipoIndicador, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="ddlIndicadorId" class="text-small">Indicador</label>
                        @Html.DropDownListFor(m => m.ddlIndicadorId, new SelectList(Model.ddlIndicador, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label for="ddlAnioId" class="text-small">Año</label>
                        @Html.DropDownListFor(m => m.ddlAnioId, new SelectList(Model.ddlAnio, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ddlPeriodoId" class="text-small">Periodo</label>
                        @Html.DropDownListFor(m => m.ddlPeriodoId, new SelectList(Model.ddlPeriodo, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label for="txtValorMeta" class="text-small">Valor de Meta</label>
                        @Html.EditorFor(m => m.txtValorMeta, new { htmlAttributes = new { @class = "form-control form-control-sm", pattern = "[0-9]*[.,]?[0-9]+", maxlength = "7", title = "Solo debe ingresar números", onkeypress = "return utilSigo.onKeyDecimal(event, this);", onkeyup= "AddEdit.fnCantidadDecimal(this);" } })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="btnCancelar" class="btn btn-secondary btn-sm" onclick="AddEdit.fnClose();">Cancelar</button>
            <button id="btnGuardar" class="btn btn-primary btn-sm">Registrar</button>
        </div>
    </div>
</div>
