
<script src="~/Areas/Supervision/js/ManInforme/_CambioUso.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>Cobertura Boscosa</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemCambioUso">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodSecuencial")
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ddlCambioUsoId" class="text-small">Actividad</label>
                        @Html.DropDownList("ddlCambioUsoId", new SelectList(ViewBag.ddlCambioUso, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtArea" class="text-small">Área</label>
                        @Html.TextBox("txtArea", "", new { @class = "form-control form-control-sm", type = "number" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ddlZonaId" class="text-small">Zona</label>
                        @Html.DropDownList("ddlZonaId", new SelectList(ViewBag.ddlZona, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlAutorizadoId" class="text-small">Autorizado</label>
                        @Html.DropDownList("ddlAutorizadoId", new SelectList(ViewBag.ddlAutorizado, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="txtCoordEste" class="text-small">Coordenada Este</label>
                            @Html.TextBox("txtCoordEste", "", new { @class = "form-control form-control-sm", maxlength = "6", type = "number" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="txtCoordNorte" class="text-small">Coordenada Norte</label>
                            @Html.TextBox("txtCoordNorte", "", new { @class = "form-control form-control-sm", maxlength = "7", type = "number" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="txtObservacion" class="text-small">Observación</label>
                            @Html.TextArea("txtObservacion", "", new { @class = "form-control form-control-sm", rows = "3" })
                        </div>
                    </div>
</form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_CambioUso.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
