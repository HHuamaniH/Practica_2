@model CapaEntidad.ViewModel.VM_ResolucionTFFS
<script type="text/javascript">
    var _renderRDRectificacion = {};
    _renderRDRectificacion.fnSelectRecom = function () {
        _renderRDRectificacion.frm.find("#divDetalleError").hide();

        if (_renderRDRectificacion.frm.find("#chkErrorMaterial").is(':checked')) {
            _renderRDRectificacion.frm.find("#divDetalleError").show();
        }
    }

    $(document).ready(function () {
        _renderRDRectificacion.frm = $("#fmrRectificacion");
        _renderRDRectificacion.fnSelectRecom();
    });

</script>
<div id="fmrRectificacion">
    <div class="card-header text-small">Motivo de la Rectificación</div>
    <div><br /></div>


    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="chkGTF" class="text-small">Error material</label>
        </div>
        <div class="form-group col-md-6">
            @Html.CheckBoxFor(m => m.chkErrorMaterial, new { @class = "form-check-input", style = "width:15px;height:16px;", @onchange = "_renderRDRectificacion.fnSelectRecom()" })
        </div>
        <div class="form-group col-md-2">
        </div>
    </div>

