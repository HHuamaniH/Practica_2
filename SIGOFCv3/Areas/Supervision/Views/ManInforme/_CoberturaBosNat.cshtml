
<script src="~/Areas/Supervision/js/ManInforme/_CoberturaBosNat.js?v=@Guid.NewGuid()"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>Áreas con cobertura de Bosques Naturales</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemCoberturaBosNat">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodSecuencial")
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtDAP" class="text-small">*Áreas con cobertura de Bosques Naturales</label>
                        @Html.DropDownList("ddlAreaCoberturaBosNatId", new SelectList(ViewBag.ddlAreaCobertura, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-6 mt-2">
                        <label for="txtAC" class="text-small">*Área (has)</label>
                        @Html.TextBox("txtAreaBosNat", "", new { @class = "form-control form-control-sm", maxlength = "8", onblur = "return utilSigo.onBlurFourDigitoThreeDecimal(this,'Area');", onkeypress = "return utilSigo.onKeyDecimal(event, this);" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtCoordEsteS" class="text-small">*Coordenada Este</label>
                        @Html.TextBox("txtCoordEsteBosNat", "", new { @class = "form-control form-control-sm", maxlength = "6", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtCoordNorteS" class="text-small">*Coordenada Norte</label>
                        @Html.TextBox("txtCoordNorteBosNat", "", new { @class = "form-control form-control-sm", maxlength = "7", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtDAP" class="text-small">*Altitud (msnm): </label>
                        @Html.TextBox("txtAltitudBosNat", "", new { @class = "form-control form-control-sm", maxlength = "4", onkeypress = "return utilSigo.checkTelefono(event)" })
                    </div>                    
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observación</label>
                        @Html.TextArea("txtObservacionBosNat", "", new { @class = "form-control form-control-sm", maxlength = "200", rows = "3", onkeypress = "return utilSigo.checkLetter(event)" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_CoberturaBosNat.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
