
<script src="~/Areas/Supervision/js/ManInformeExSitu/_EquipoContencion.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span id="lblItemEquipoContencionTitulo">Material o Equipo de Contención</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemEquipoContencion">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfTipo")
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ddlTipoEquipoId" class="text-small">Descripción</label>
                        @Html.DropDownList("ddlTipoEquipoId", new SelectList(ViewBag.ddlTipoEquipo, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observación</label>
                        @Html.TextArea("txtObservacion", "", new { @class = "form-control form-control-sm", rows = "3" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_EquipoContencion.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
