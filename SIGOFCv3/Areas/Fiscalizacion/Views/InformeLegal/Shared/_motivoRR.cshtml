                </div>
                <div class="form-group col-md-2">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                </div>
                <div class="form-group col-md-6">
                    @Html.TextAreaFor(m => m.txtInfundadoObsRR, 3, 1, new { @class = "form-control form-control-sm" })
                </div>
                <div class="form-group col-md-2">
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="txtPruebasPresentadasRR" class="text-small">Pruebas presentadas</label>
        </div>
        <div class="form-group col-md-6">
            @Html.TextAreaFor(m => m.txtPruebasPresentadasRR, 3, 1, new { @class = "form-control form-control-sm" })
        </div>
