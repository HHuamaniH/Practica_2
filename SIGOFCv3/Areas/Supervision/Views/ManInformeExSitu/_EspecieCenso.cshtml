
<script src="~/Areas/Supervision/js/ManInformeExSitu/_EspecieCenso.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span id="lblItemEspecieCensoTitulo">Vertebrado Mayor</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemEspecieCenso">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodSecuencial")
                @Html.Hidden("hdfTipo", (string)ViewBag.hdfTipo)
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Partial("~/Areas/General/Views/Controles/_renderComboEspecie.cshtml")
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlProcedenciaId" class="text-small">Procedendia</label>
                        @Html.DropDownList("ddlProcedenciaId", new SelectList(ViewBag.ddlProcedencia, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtNumeroIndiv" class="text-small">N° Individuos</label>
                        @Html.TextBox("txtNumeroIndiv", "", new { @class = "form-control form-control-sm", type = "number" })
                    </div>
                    <div class="form-group col-md-6 datos_vertebrado">
                        <label for="ddlTipoIdentificacionId" class="text-small">Tipo de Identificación</label>
                        @Html.DropDownList("ddlTipoIdentificacionId", new SelectList(ViewBag.ddlTipoIdentificacion, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6 datos_vertebrado">
                        <label for="txtCodigo" class="text-small">Código y/o Nombre</label>
                        @Html.TextBox("txtCodigo", "", new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-6 datos_vertebrado">
                        <label for="ddlEspecieSexoId" class="text-small">Sexo</label>
                        @Html.DropDownList("ddlEspecieSexoId", new SelectList(ViewBag.ddlEspecieSexo, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observación</label>
                        @Html.TextArea("txtObservacion", "", new { @class = "form-control form-control-sm", rows = "3" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_EspecieCenso.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
