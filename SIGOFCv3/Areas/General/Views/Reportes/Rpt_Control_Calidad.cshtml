
@model CapaEntidad.ViewModel.VM_ReporteGeneral
@{
    ViewBag.Title = "Reporte";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div id="divReporteCalidas" class="container-fluid">
    <div class="card">
        <div class="card-header text-left">
            <h5>Reporte de Control de Calidad de los Documentos en las ODs</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <a class="btn btn-outline-warning" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                        Opciones de busqueda
                    </a>
                    <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6>Sel. Año de consulta</h6>
                                    <div id="chkRegiones" style="height:150px; overflow-y: scroll;">
                                        @if (Model.lstChkAnio != null)
                                        {
                                            foreach (var item in Model.lstChkAnio)
                                            {
                                                <ul>
                                                    <li>
                                                        <div class="checkbox">
                                                            <label>
                                                                <input type="radio" name="radioAnio" class="check" value="@item.Value">
                                                                @item.Text
                                                            </label>
                                                        </div>
                                                    </li>
                                                </ul>

                                            }
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <h6>Sel. Tipo de documento</h6>
                                    @Html.DropDownListFor(m => m.txtIdTipo, new SelectList(Model.listTipoDocumento, "CODIGO", "DESCRIPCION"),
                                           new
                                                {
                                                   @class = "form-control form-control-sm",
                                                   @id = "ddlEnciso",
                                                   @onchange = "_renderIncisos.fncSelectEnciso()"
                                                })
                                </div>
                                <div class="col-sm-4">
                                    <button id="btnBuscarFauna" class="btn btn-primary" style="float: right">
                                        <i class="fa fa-search"></i>&nbsp;&nbsp;Generar reporte
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="col-sm-12">
                    <br />
                </div>
            </div>

            <div><hr /></div>
            <div id="divReporte">

            </div>
            <div id="divReporteDetalle">

            </div>
        </div>
    </div>
</div>