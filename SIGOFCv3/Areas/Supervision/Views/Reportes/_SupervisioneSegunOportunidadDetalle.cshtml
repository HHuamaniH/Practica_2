@model List<CapaEntidad.DOC.Ent_REPORTE_ISUPERVISION>
<div class="table-responsive">
    <table class="table table-hover table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th colspan="15" style="text-align:left">
                    <a id="btnExportar" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" onclick="_SupDetOportunidad.fnDescargar()" title="Descargar"><span class="fa mx-2 fa-lg fa-file-excel-o"></span></a>Reporte Detallado
                </th>
            </tr>
            <tr>
                <th>N°</th>
                <th>Nro. Informe</th>
                <th>POA</th>
                <th>Fecha Aprobación POA</th>
                <th>Inicio Vigencia POA</th>
                <th>Fin Vigencia POA</th>
                <th>Título Habilitante</th>
                <th>Titular</th>
                <th>Año</th>
                <th>Mes</th>
                <th>Región</th>
                <th>Subdirección de Línea</th>
                <th>Modalidad</th>
                <th>Oficina Desconcentrada</th>
                <th>Oportunidad</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                int contador = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@contador</td>
                        <td>@item.NUM_INFORME</td>
                        <td>@item.POA</td>
                        <td>@item.FECHA_APRUEBA_POA</td>
                        <td>@item.INICIO_VIGENCIA</td>
                        <td>@item.FIN_VIGENCIA</td>
                        <td>@item.NUM_THABILITANTE</td>
                        <td>@item.TITULAR</td>
                        <td>@item.ANIO</td>
                        <td>@item.MES</td>
                        <td>@item.DEPARTAMENTO</td>
                        <td>@item.DLINEA</td>
                        <td>@item.MTIPO</td>
                        <td>@item.OD</td>
                        <td>@item.EST_APROVECHA</td>                      
                    </tr>
                    contador = contador + 1;
                }
            }
            else
            {
                <tr><td colspan="15" style="text-align:center">No existe registros</td></tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    var _SupDetOportunidad = {
        fnDescargar: () => {
            const url = `${urlLocalSigo}Supervision/Reportes/ReporteOportunidadDetalle`;
            utilSigo.file.getBinary("ReporteOportunidadDet.xlsx", url);
        }
    };
    $(document).ready(function () {


    });
</script>