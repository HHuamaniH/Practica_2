@{
    ViewBag.Title = ViewBag.TituloFormulario;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script src="~/Areas/THabilitante/js/ManObligaciones/Index.js"></script>

<div class="container-fluid">
    <div class="card">
        <div class="card-header text-left">
            <h5>@ViewBag.TituloFormulario</h5>
        </div>
        <div class="card-body">
            <form id="frmBuscarObligacion" method="get">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="ddlTipoObligacionId" class="text-small">Tipo de Obligación</label>
                        @Html.DropDownList("ddlTipoObligacionId", new SelectList(ViewBag.ddlTipoObligacion, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="form-group col-md-4">
                        <label for="ddlEstadoId" class="text-small">Estado</label>
                        @Html.DropDownList("ddlEstadoId", new SelectList(ViewBag.ddlEstado, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                    <div class="btn-group col-md-2" style="padding-top:30px;">
                        <a id="btnSearch" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Buscar el registro" onclick="ManObligacion.fnSearch()"><span class="fa mx-2 fa-lg fa-search"></span></a>
                        <a id="btnRefresh" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Actualizar el listado" onclick="ManObligacion.fnRefresh()"><span class="fa mx-2 fa-lg fa-refresh"></span></a>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table id="tbObligacion" class="table table-hover table-bordered" style="width:100%;">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>