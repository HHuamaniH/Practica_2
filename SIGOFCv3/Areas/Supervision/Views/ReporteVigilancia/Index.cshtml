@{
    ViewBag.Title = ViewBag.TituloFormulario;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<script src="~/Areas/Supervision/js/ReporteVigilancia/Index.js"></script>

<div class="container-fluid">
    <div class="card">
        <div class="card-header text-left">
            <h5>@ViewBag.TituloFormulario</h5>
        </div>
        <div class="card-body">
            <form id="frmBuscarRpt" method="get">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="ddlTipoHallazgoId" class="text-small">Tipo Hallazgo</label>
                        @Html.DropDownList("ddlTipoHallazgoId", new SelectList(ViewBag.ddlTipoHallazgo, "Value", "Text"), new { @class = "form-control form-control-sm" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="txtComunidad" class="text-small">Comunidad</label>
                        <input type="text" class="form-control form-control-sm" id="txtComunidad">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label for="txtFechaInicio" class="text-small">Fecha Inicio</label>
                        <input type="text" class="form-control form-control-sm" id="txtFechaInicio" placeholder="dd/mm/yyyy" title="la fecha a ingresar debe ser en el formato dd/mm/yyyy" maxlength="10">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="txtFechaFin" class="text-small">Fecha Fin</label>
                        <input type="text" class="form-control form-control-sm" id="txtFechaFin" placeholder="dd/mm/yyyy" title="la fecha a ingresar debe ser en el formato dd/mm/yyyy" maxlength="10">
                    </div>
                    <div class="btn-group col-md-2" style="padding-top:30px;">
                        <a id="btnSearch" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Buscar el registro" onclick="RptVigilancia.fnSearch()"><span class="fa mx-2 fa-lg fa-search"></span></a>
                        <a id="btnRefresh" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Actualizar el listado" onclick="RptVigilancia.fnRefresh()"><span class="fa mx-2 fa-lg fa-refresh"></span></a>
                        <a id="btnDownload" style="cursor:pointer;" data-toggle="tooltip" data-placement="top" title="Descargar" onclick="RptVigilancia.fnExport()"><span class="fa mx-2 fa-lg fa-file-excel-o"></span></a>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table id="tbRptVigilancia" class="table table-hover table-bordered" style="width:100%;">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>