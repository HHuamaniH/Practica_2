
<script src="~/Areas/Supervision/js/ManInforme/_VolumenAnalizado.js?v1.5"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;">
            <span>Volumen Analizado</span>
            <i class="fa fa-close" style="cursor:pointer;" data-dismiss="modal" aria-label="Close"></i>
        </div>
        <div class="modal-body">
            <form id="frmItemVolumenAnalizado">
                @Html.Hidden("hdfRegEstado")
                @Html.Hidden("hdfCodSecuencial")
                <div class="form-row">
                    <div class="form-group col-md-12">
                        @Html.Partial("~/Areas/General/Views/Controles/_renderComboEspecie.cshtml")
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtVolAprobado" class="text-small">Volumen Aprobado</label>
                        @Html.TextBox("txtVolAprobado", "", new { @class = "form-control form-control-sm", maxlength = "11", onkeypress = "return utilSigo.onKeyDecimal(event, this);", onblur = "return utilSigo.onBlurSevenDigitoThreeDecimal(this,'Volumen Aprobado');" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtVolMovilizado" class="text-small">Volumen Movilizado</label>
                        @Html.TextBox("txtVolMovilizado", "", new { @class = "form-control form-control-sm", maxlength = "11", onkeypress = "return utilSigo.onKeyDecimal(event, this);", onblur = "return utilSigo.onBlurSevenDigitoThreeDecimal(this,'Volumen Movilizado');" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="txtVolInjustificado" class="text-small">Volumen Injustificado</label>
                        @Html.TextBox("txtVolInjustificado", "", new { @class = "form-control form-control-sm", maxlength = "11", onkeypress = "return utilSigo.onKeyDecimal(event, this);", onblur = "return utilSigo.onBlurSevenDigitoThreeDecimal(this,'Volumen Injustificado');" })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="txtVolJustificado" class="text-small">Volumen Justificado</label>
                        @Html.TextBox("txtVolJustificado", "", new { @class = "form-control form-control-sm", maxlength = "11", onkeypress = "return utilSigo.onKeyDecimal(event, this);", onblur = "return utilSigo.onBlurSevenDigitoThreeDecimal(this,'Volumen Justificado');" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ddlTipoAprovechamiento_VolAn" class="text-small">Tipo Aprovechamiento</label>

                        @Html.DropDownList("ddlTipoAprovechamiento_VolAn", new SelectList(ViewBag.ddlTipoAprov, "Value", "Text"), new { @class = "form-control form-control-sm" })

                        @*<select id="ddlTipoAprovechamiento_VolAn" class="form-control form-control-sm">
                            <option value="CARBON">CARBÓN </option>
                            <option value="MADERABLES">MADERABLES </option>
                            <option value="NO MADERABLES">NO MADERABLES</option>
                        </select>*@
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlUnidadMedida_VolAn" class="text-small">Unidad de Medida</label>
                        <select id="ddlUnidadMedida_VolAn" class="form-control form-control-sm">  
                            <option value="KG">KG</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtParcelaVerticeArea" class="text-small col-md-3">PC</label>
                    <div class="col-md-9">
                        @Html.DropDownList("txtParcelaVolumen", new SelectList(ViewBag.ddParcelas, "Value", "Text"), new { @class = "form-control form-control-sm" })

                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtObservacion" class="text-small">Observaciones</label>
                        @Html.TextArea("txtObservacion", "", new { @class = "form-control form-control-sm", rows = "3", maxlength="100", onkeypress = "return utilSigo.checkLetter(event);" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary btn-sm" onclick="_VolumenAnalizado.fnSubmitForm()">Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancelar</button>
        </div>
    </div>
</div>
