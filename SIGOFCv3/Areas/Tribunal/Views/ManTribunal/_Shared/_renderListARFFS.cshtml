                        <div class="table-responsive" style="overflow-y:hidden;">
                            <table id="tbConsultaRS" style="width:100%;margin:0px !important;" class="table table-hover table-bordered">
                                <thead></thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
