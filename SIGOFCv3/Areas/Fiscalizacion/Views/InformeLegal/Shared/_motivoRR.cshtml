                <label for="chkFaltaPruebasRR" class="text-small">Falta de nuevas pruebas</label>
            </div>
            <div class="form-group col-md-4">
                @Html.CheckBoxFor(m => m.chkFaltaPruebasRR, new { @class = "form-check-input", style = "width:15px;height:16px;" })
