@model CapaEntidad.ViewModel.VM_MandatoCorrectivo
<style>
    #frmItemDestinatario input[type=text] {
        text-transform: uppercase;
    }
</style>

<div class="modal-dialog modal-lg" role="document" id="divItemDestinatario">
    <div class="modal-content">
        <div class="modal-header text-small" style="cursor:move;padding:0.5rem;">
            <h5 class="modal-title" id="h5Titulo">Aceptación de Fiscalización</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmItemExpediente">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="PLAZO_DIA" class="text-small" id="diasLB">ASUNTO</label>
                        @Html.TextBoxFor(m => m.PLAZO_DIA, new { @class = "form-control form-control-sm", disabled = true })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="PLAZO_DIA" class="text-small" id="diasLB">DESCARGAR</label>
                        @Html.TextBoxFor(m => m.PLAZO_DIA, new { @class = "form-control form-control-sm", })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="PLAZO_MES" class="text-small" id="mesesLB">MESES</label>
                        @Html.TextBoxFor(m => m.PLAZO_MES, new { @class = "form-control form-control-sm", disabled = true })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="PLAZO_MES" class="text-small" id="mesesLB">DIAS</label>
                        @Html.TextBoxFor(m => m.PLAZO_MES, new { @class = "form-control form-control-sm", disabled = true })
                    </div>
                    <div class="form-group col-md-6">
                        <label for="ddlEstadoID" class="text-small" id="mesesLB">APROBACIÓN</label>
                        @*@Html.DropDownListFor(m => m.ddlEstadoID, new SelectList(Model.ddlEstado, "Value", "Text"), new { @class = "form-control form-control-sm" })*@
                        <select class="form-control form-control-sm">
                            <option>SELECCIONAR</option>
                            <option>APROBADO</option>
                            <option>RECHAZADO</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">

                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-primary">Aceptar</button>
            <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-danger">Cerrar</button>
        </div>
    </div>
</div>