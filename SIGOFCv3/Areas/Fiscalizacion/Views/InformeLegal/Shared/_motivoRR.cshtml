
@model  CapaEntidad.ViewModel.VM_InformeLegal

<script type="text/javascript">

    var _renderRecursoRecon = {};

    _renderRecursoRecon.fnSelectRecom = function () {
        _renderRecursoRecon.frm.find("#divImprocedente").hide();
        _renderRecursoRecon.frm.find("#divProcedente").hide();
        _renderRecursoRecon.frm.find("#divInfundado").hide();

        if (_renderRecursoRecon.frm.find("#chkImprocedenteRR").is(':checked')) {
            _renderRecursoRecon.frm.find("#divImprocedente").show();
        }

        if (_renderRecursoRecon.frm.find("#chkProcedenteRR").is(':checked')) {
            _renderRecursoRecon.frm.find("#divProcedente").show();
        }

        if (_renderRecursoRecon.frm.find("#chkInfundadoRR").is(':checked')) {
            _renderRecursoRecon.frm.find("#divInfundado").show();
            $.ajax({
                url: '@Url.Action("infraccionesRR","InformeLegal")',
                type: 'POST',
                datatype: "json",
                traditional: true,
                data: { },
                success: function (data) {
                    $('#divListaInfracciones').html(data);
                }
            })
        }
    }

    $(document).ready(function () {
        _renderRecursoRecon.frm = $("#frmRecursoReconsidera");
        _renderRecursoRecon.fnSelectRecom();
    });

</script>
<!-- para tipo de evaluacion recurso de reconsideracion-->
<div id="frmRecursoReconsidera">
    <div>
        <br />
    </div>
    <div class="form-row" style="background-color:#dae7f5">
        <div class="form-group col-md-12">
